{
  "kind": "collectionType",
  "collectionName": "lookbooks",
  "info": {
    "singularName": "lookbook",
    "pluralName": "lookbooks",
    "displayName": "Lookbook",
    "description": "Lookbooks visuales estilo revista para mostrar colecciones"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "season": {
      "type": "string"
    },
    "year": {
      "type": "integer"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product"
    },
    "layoutType": {
      "type": "enumeration",
      "enum": ["grid", "masonry", "carousel", "split"],
      "default": "masonry"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "publishDate": {
      "type": "date"
    }
  }
}
