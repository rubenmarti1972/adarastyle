{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice",
    "description": "Facturas de las Ã³rdenes"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "invoiceNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    },
    "issueDate": {
      "type": "datetime",
      "required": true
    },
    "dueDate": {
      "type": "datetime"
    },
    "customerInfo": {
      "type": "json",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "taxRate": {
      "type": "decimal",
      "default": 19
    },
    "shipping": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "sent", "paid", "overdue", "cancelled"],
      "default": "draft"
    },
    "pdfUrl": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    }
  }
}
