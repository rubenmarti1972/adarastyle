{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Ã“rdenes de compra"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerPhone": {
      "type": "string"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal",
      "default": 0
    },
    "shipping": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "confirmed",
        "shipped",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": ["pending", "authorized", "paid", "failed", "refunded"],
      "default": "pending"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["wompi", "nequi", "cash", "transfer"],
      "required": true
    },
    "paymentDetails": {
      "type": "json",
      "default": {}
    },
    "shippingAddress": {
      "type": "json",
      "required": true
    },
    "billingAddress": {
      "type": "json",
      "required": true
    },
    "trackingNumber": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "invoice": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::invoice.invoice"
    }
  }
}
